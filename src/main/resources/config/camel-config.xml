<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xmlns:cxf="http://camel.apache.org/schema/cxf"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
           http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
           http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd">

  <cxf:cxfEndpoint id="SPBusService"
                   address="/camel-simple-bus/webservices/SPBusService"
                   endpointName="s:SPBusEndpoint"
                   serviceName="s:SPBusEndpointService"
                   wsdlURL="ru/cinimex/bus/wsdl/rspbus.wsdl"
                   serviceClass="ru.cinimex.bus.SPBusEndpoint"
                   xmlns:s="http://bus.cinimex.ru"/>

  <bean id="router" class="ru.cinimex.export.ws.SPBusServiceRoutes"/>

  <camel:camelContext id="camel">
    <camel:routeBuilder ref="router"/>
  </camel:camelContext>

</beans>